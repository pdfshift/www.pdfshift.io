<script>
    {% include '_partials/js/register.js' %}
    {% include '_partials/js/contact.js' %}

    // CTA Actions
    var form = document.getElementById('register'),
        items = document.querySelectorAll('.create-account'),
        scrollToPos = form.offsetTop - header.querySelector('.heading').clientHeight - 40;

    scrollToPos = (scrollToPos < 0 ? 0 : scrollToPos);
    for (var i = 0; i < items.length; i++) {
        items[i].addEventListener('click', function (event) {
            event.preventDefault();
            form.elements[0].focus({preventScroll: true});
            setTimeout(function () {
                window.scroll({
                    top: scrollToPos, 
                    left: 0
                });
            }, 50);
        }, false);
    }

    // Try me
    (function () {
        document.querySelector('#try-me .css>a').addEventListener('click', function () {
            document.querySelector('#try-me textarea').parentElement.classList.toggle('visible');
        }, false)

        var form = document.querySelector('#try-me form'),
            submitButton = form.querySelector('.button');

        form.addEventListener('submit', function (event) {
            if (submitButton.classList.contains('button-disabled')) {
                return false;
            }

            var popup = window.open('https://pdfshift.io/loading/', '_blank');
            popup.focus();

            form.classList.remove('error')
            submitButton.classList.add('button-disabled');
            
            event.preventDefault();
            var params = window.PDFShift.forms.asJSON(form);
            params['filename'] = 'result.pdf';
            params['timeout'] = 15;

            window.PDFShift.requests.post('convert/pdf', params).then(
                function (json) {
                    submitButton.classList.remove('button-disabled');
                    popup.location.href = json.url
                },
                function (response) {
                    var error = 'A fatal error occured.';
                    if (response.data) {
                        if (response.data.hasOwnProperty('error')) {
                            error = response.data.error;
                        } else if (response.data.hasOwnProperty('errors')) {
                            var keyname = Object.keys(response.data.errors)[0]
                            error = keyname + ' : ' + response.data.errors[keyname][0]
                        }
                    }
                    form.classList.add('error')
                    form.querySelector('p.error').innerText = error
                    submitButton.classList.remove('button-disabled');
                    popup.close();
                }
            )

            return false;
        }, true)
    })();

    // Code blocks
    window.PDFShift.onReady(function () {
        window.PDFShift.load(['//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/highlight.min.js', '//cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.0/clipboard.min.js'], function () {
            // Highlighting the blocks:
            var blocks = document.querySelectorAll('pre code');
            for (var i = 0; i < blocks.length; i++) {
                hljs.highlightBlock(blocks[i]);
            }

            var code = document.querySelector('#code');

            code.querySelector('.code-selection').addEventListener('click', function (event) {
                if (event.target.nodeName !== 'A') {
                    return;
                }

                window.PDFShift.storage.set('language', event.target.dataset.language);

                code.querySelector('.code-samples>.visible').classList.remove('visible');
                code.querySelector('.code-samples>#code-' + event.target.dataset.language).classList.add('visible');
                code.querySelector('.code-selection>.selected').classList.remove('selected');
                event.target.parentElement.classList.add('selected');
            }, false)

            if (ClipboardJS.isSupported()) {
                function setCopyEvent(target) {
                    var parent = target.parentElement, innerText = null;
                    while (true) {
                        if (parent === null) {
                            return // We can't find it so we stop, useless to continue ...
                        }
                        if (parent.classList.contains('code-section')) {
                            break
                        }
                        parent = parent.parentElement;
                    }

                    innerText = parent.querySelector('pre>code').innerText;

                    var clipboard = new ClipboardJS(target, {
                        'text': function (trigger) {
                            return innerText
                        }
                    })

                    clipboard.on('success', function (e) {
                        // this.resetCopyMessage('Copied!')
                        target.innerText = 'Copied!'
                        target.classList.add('button-disabled')
                        setTimeout(function () {
                            target.innerText = 'Copy to clipboard';
                            target.classList.remove('button-disabled')
                        }, 5000)
                        e.clearSelection()
                    })

                    clipboard.on('error', function (e) {
                        target.innerText = 'An error occured!'
                        target.classList.add('button-disabled')
                    })
                }

                var buttons = code.querySelectorAll('.code-samples .code-section .copy>a');
                for (var i = 0 ; i < buttons.length; i++) {
                    setCopyEvent(buttons[i]);
                }
            }
        });

        window.PDFShift.on('#pricing-toggle-checkbox', 'change', function (event) {
            var items = document.querySelectorAll('.pricing__card .pricing__card__price, .pricing__switchgroup .pricing__switchgroup__title')
            for (var i = 0; i < items.length; i++) {
                items[i].classList.toggle('active')
            }
        })
    });

    {% include '_partials/js/contact.js' %}
</script>
